<div class="container-form">
  <div class="card-form">
    <%= image_tag "http://www.agirmontreal.org/wp-content/uploads/2016/06/X.png" %>
    <h1>Sign in</h1>
    <p>AGIR Member Community Portal</p>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs card-form-inputs">
        <%= f.input :email,
                    placeholder: "Email",
                    label: false,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>

        <%= f.input :password,
                    placeholder: "Password",
                    label: false,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Login", class: "btn-yellow-filled" %>
      </div>
    <% end %>
    
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn-text" %>

    <div class="form-note">
      <p>Don't have an account? <a href="#" class="btn-yellow-inline">Contact</a> Iyan, our Support Coordinator to get you set up. </p>
      <p>AGIR values its members safety and confidentiality. Only verified members can sign up and access the Community Portal. <a href="#" class="btn-yellow-inline">Learn more</a></p>
    </div>

  </div>
</div>
